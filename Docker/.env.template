# Environment variables for speech-to-speech translation
# Copy this file to .env and fill in your values

# Hugging Face token (required for model downloads)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Application settings
DEBUG=False
MAX_AUDIO_LENGTH=300
MAX_PODCAST_LENGTH=3600
SAMPLE_RATE=16000

# Resource limits
MEMORY_THRESHOLD=0.9
MAX_RETRIES=3
TIMEOUT=600

# Rate limiting
RATE_LIMIT_DEFAULT=200_per_day
RATE_LIMIT_TRANSLATION=10_per_minute
RATE_LIMIT_VIDEO=2_per_minute
RATE_LIMIT_PODCAST=5_per_minute

# Model configuration (only change if you know what you're doing)
MODEL_NAME=facebook/seamless-m4t-v2-large